// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Use either the command `npx prisma generate` or `npm i` to re-generate the mock data after any schema changes. 
generator custom_generator {
  provider = "prisma-generator-fake-data"
  output   = "../types/fake-data.ts"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User modal can be updated as the application grows
model User {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String            @unique
  emailVerified     DateTime?
  image             String
  accounts          Account[]
  sessions          Session[]
  shoppingLists     ShoppingList[]
  chores            Chores[]
  createdHouseholds Household[]       @relation("CreatedHouseholds")
  householdMembers  HouseholdUser[]
  invitesSent       HouseholdInvite[] @relation("InvitesSent")
  invitesReceived   HouseholdInvite[] @relation("InvitesReceived")
}

model ShoppingItem {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  quantity       Int
  active         Boolean
  ShoppingList   ShoppingList? @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  shoppingListId String        @db.ObjectId
}

model ShoppingList {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  items       ShoppingItem[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  createdBy   User           @relation(fields: [createdById], references: [id])
  createdById String         @db.ObjectId

  // Relation to households through the join table
  householdEntries HouseholdShoppingList[] @relation("HouseholdShoppingList_ShoppingList")

  @@index([title])
}

model HouseholdShoppingList {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  householdId    String @db.ObjectId
  shoppingListId String @db.ObjectId

  household    Household    @relation("HouseholdShoppingList_Household", fields: [householdId], references: [id], onDelete: Cascade)
  shoppingList ShoppingList @relation("HouseholdShoppingList_ShoppingList", fields: [shoppingListId], references: [id], onDelete: Cascade)

  @@unique([householdId, shoppingListId]) // Ensures unique pairings
}

// Chores model can be updated as the application grows
model Chores {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  items       ChoresItem[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdBy   User         @relation(fields: [createdById], references: [id])
  createdById String       @db.ObjectId

  // Relation to households through the join table
  householdEntries HouseholdChores[] @relation("HouseholdChores_Chores")

  @@index([title])
}

model HouseholdChores {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  householdId String @db.ObjectId
  choresId    String @db.ObjectId

  household Household @relation("HouseholdChores_Household", fields: [householdId], references: [id], onDelete: Cascade)
  chores    Chores    @relation("HouseholdChores_Chores", fields: [choresId], references: [id], onDelete: Cascade)

  @@unique([householdId, choresId]) // Ensures unique pairings
}

model Household {
  id            String                  @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  createdById   String                  @db.ObjectId
  imageUrl      String
  createdBy     User                    @relation(fields: [createdById], references: [id], name: "CreatedHouseholds")
  // Relation to other models through join tables
  members       HouseholdUser[]
  shoppingLists HouseholdShoppingList[] @relation("HouseholdShoppingList_Household")
  chores        HouseholdChores[]       @relation("HouseholdChores_Household")
  userInvites   HouseholdInvite[]
}

model ChoresItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  completedBy String?
  active      Boolean
  Chores      Chores? @relation(fields: [choresId], references: [id], onDelete: Cascade)
  choresId    String  @db.ObjectId
}

model HouseholdUser {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  householdId String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([userId, householdId]) // Ensures unique pairs
}

model HouseholdInvite {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  householdId   String       @db.ObjectId
  inviterUserId String       @db.ObjectId
  invitedEmail  String
  invitedUserId String?      @db.ObjectId // Optional: Link to user if invited is already registered
  token         String       @unique
  status        InviteStatus @default(PENDING)
  expiresAt     DateTime
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  acceptedAt    DateTime?

  // To access the user who sent the invite
  inviterUser User  @relation(fields: [inviterUserId], references: [id], name: "InvitesSent")
   // To access the user who was invited (if registered)
  invitedUser User? @relation(fields: [invitedUserId], references: [id], name: "InvitesReceived")

  // To access the household the invite is for
  household Household @relation(fields: [householdId], references: [id])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

// The following models are required for next-auth to work
// Do Not Change.
// Necessary for Next auth
model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Necessary for Next auth
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // @db.Text
  access_token      String? // @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Necessary for Next auth
model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
